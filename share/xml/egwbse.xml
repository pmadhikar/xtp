<options>

<!-- xtp_run -e gwbse -f state.db -o options.xml -->
<egwbse help="An implementation of GW-BSE." label="calc:gwbse">

	<job help="Job options">
		<file help="Job control file (full path)"></file>
	</job>

        <dftbasis>ubecppol</dftbasis>
        <gwbasis>gwdefault</gwbasis>
        <ranges></ranges> <!-- default: all levels in RPA, 1:2*HOMO in QP and BSE; other options: factor,explicit -->
        <rpamax>10</rpamax> <!-- only needed, if ranges is factor or explicit -->
        <qpmin>1</qpmin> <!-- needed, if ranges is factor or explicit -->
        <qpmax>11</qpmax> <!-- needed, if ranges is factor or explicit -->
        <bsemin>1</bsemin> <!-- needed, if ranges is factor or explicit -->
        <bsemax>11</bsemax> <!-- needed, if ranges is factor or explicit -->
		<shift>0.3</shift> <!-- preshift of DFT energies in Rydberg -->
		<tasks>all</tasks> <!-- default task is perturbative QP only, other options: qpdiag, singlets, triplets, all -->
		<store>orbitals</store>
        <exctotal>100</exctotal>
        <print>10</print>

</egwbse>

</options>
